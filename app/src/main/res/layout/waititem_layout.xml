<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_icon_mychrater"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/user_icon"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ready"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/img_icon_mychrater"
        android:textStyle="normal|bold|italic"
        android:textColor="@color/blue"
        android:layout_margin="@dimen/object_margin2" />


    <TextView
        android:text="TextView"
        android:id="@+id/tv_username_wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/img_icon_mychrater"
        android:layout_alignBottom="@+id/img_icon_mychrater"
        android:textColor="@android:color/black" />

</RelativeLayout>