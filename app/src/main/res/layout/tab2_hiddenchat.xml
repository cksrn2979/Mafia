<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.changoo.mafia.activity.PlayActivity$PlaceholderFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/object_margin"
        android:background="@drawable/icon_background"
        android:padding="10dp"
        android:layout_weight="0.00">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="9"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/object_margin2"
            android:layout_marginTop="@dimen/object_margin2">

            <ImageView
                app:srcCompat="@drawable/icon_mafia"
                android:id="@+id/imageView2"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_mafia1"
                android:layout_weight="2"
                android:textStyle="normal|bold"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textAlignment="viewStart"
                android:visibility="visible"
                android:layout_marginLeft="@dimen/object_margin"
                android:layout_marginRight="@dimen/object_margin" />

            <ImageView
                app:srcCompat="@drawable/icon_mafia"
                android:id="@+id/imageView3"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_mafia2"
                android:layout_weight="2"
                android:textStyle="normal|bold"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textAlignment="viewStart"
                android:visibility="visible"
                android:layout_marginLeft="@dimen/object_margin"
                android:layout_marginRight="@dimen/object_margin" />

            <ImageView
                app:srcCompat="@drawable/icon_mafia"
                android:id="@+id/imageView5"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_mafia3"
                android:layout_weight="2"
                android:textStyle="normal|bold"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textAlignment="viewStart"
                android:visibility="visible"
                android:layout_marginLeft="@dimen/object_margin"
                android:layout_marginRight="@dimen/object_margin" />

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/lv_hiddenchats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_showemoticons_hidden"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/object_margin2"
            android:layout_marginRight="@dimen/object_margin2"
            android:background="@drawable/buttonshape"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_text_hidden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/object_margin"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_send_hidden"
            android:layout_width="64dp"
            android:layout_height="34dp"
            android:layout_marginLeft="@dimen/object_margin2"
            android:layout_marginRight="@dimen/object_margin2"
            android:background="@drawable/buttonshape"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="send"
            android:textSize="14sp"
            android:textColor="@color/white" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/layout_emoticons_hidden"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FFFF"
        android:columnCount="4"
        android:visibility="gone">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/btn_emoticon1_hidden"
                app:srcCompat="@drawable/emoticon1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/object_margin"
                android:layout_weight="1"
                android:background="#FFFF" />

            <ImageButton
                android:id="@+id/btn_emoticon2_hidden"
                app:srcCompat="@drawable/emoticon2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/object_margin"
                android:layout_weight="1"
                android:background="#FFFF" />

            <ImageButton
                android:id="@+id/btn_emoticon3_hidden"
                app:srcCompat="@drawable/emoticon3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/object_margin"
                android:layout_weight="1"
                android:background="#FFFF" />

            <ImageButton
                android:id="@+id/btn_emoticon4_hidden"
                app:srcCompat="@drawable/emoticon4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/object_margin"
                android:layout_weight="1"
                android:background="#FFFF" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/btn_emoticon5_hidden"
                app:srcCompat="@drawable/emoticon5"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/object_margin"
                android:layout_weight="1"
                android:background="#FFFF" />

            <ImageButton
                android:id="@+id/btn_emoticon6_hidden"
                app:srcCompat="@drawable/emoticon6"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/object_margin"
                android:layout_weight="1"
                android:background="#FFFF" />

            <ImageButton
                android:id="@+id/btn_emoticon7_hidden"
                app:srcCompat="@drawable/emoticon7"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/object_margin"
                android:layout_weight="1"
                android:background="#FFFF" />

            <ImageButton
                android:id="@+id/btn_emoticon8_hidden"
                app:srcCompat="@drawable/emoticon8"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/object_margin"
                android:layout_weight="1"
                android:background="#FFFF" />
        </TableRow>


    </TableLayout>
</LinearLayout>

