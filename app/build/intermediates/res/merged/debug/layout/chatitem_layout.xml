<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_layout">

        <ImageView
            android:id="@+id/img_icon_mychrater"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/user_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="visible" />

        <Space android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_margin="10dp" />
    </RelativeLayout>


    <TextView
        android:text="TextView"
        android:id="@+id/tv_username_msgitem"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold|italic"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/img_layout"
        android:layout_alignTop="@+id/img_layout"
        android:layout_margin="3dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/img_emoticon"
        android:layout_below="@+id/tv_username_msgitem"
        android:layout_toRightOf="@+id/img_layout" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_message"
        android:gravity="left"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_below="@+id/img_emoticon"
        android:background="@drawable/text_box"
        android:layout_margin="3dp"
        android:layout_toRightOf="@+id/img_layout" />
</RelativeLayout>